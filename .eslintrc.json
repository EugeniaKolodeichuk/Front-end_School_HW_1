{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "airbnb",
        "plugin:import/recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:promise/recommended",
        "plugin:regexp/recommended",
        "plugin:unicorn/recommended"
    ],
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "parserOptions": {
          "project": ["./tsconfig.json"]
        }
      }
	  ],
    "parser": "@typescript-eslint/parser",   
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "promise",
        "import",
                "unicorn",
        "regexp",
        "more"
    ],

    "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "typescript": {}
    }
  },

    "rules": {
      "no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["warn"],
      "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "linebreak-style": 0,
        "function-paren-newline": 0,
        "react/function-component-definition": "off",
        "prefer-arrow-callback":"off",
        "arrow-body-style":"off",
        "react/jsx-one-expression-per-line":"off",
        "spaced-comment":"off",
        "implicit-arrow-linebreak": "off",
        "operator-linebreak": "off",
        "global-require": "off",
        "arrow-parens": "off",
        "react/forbid-prop-types": "off",
        "func-names":"off",
        "no-console": "off",
        "promise/catch-or-return": "off",
        "promise/always-return": "off",
        "more/no-void-map": 2,
        "more/no-c-like-loops": 2,
        "more/prefer-includes": 2,        
        "more/no-numeric-endings-for-variables": 2,
        "more/no-filter-instead-of-find": 2,
        "more/force-native-methods": 2,
        "more/no-duplicated-chains": 0,
        "more/classbody-starts-with-newline": [2, "never"],
        "more/no-hardcoded-password": 2,
        "prefer-destructuring": 0,
        "jest": "off",
        "react/jsx-curly-brace-presence":"off",
        "jest/valid-describe":"off",
        "@typescript-eslint/explicit-module-boundary-types":["off"],
        "@typescript-eslint/no-explicit-any":["off"],
        "jest/expect-expect":["off"],
         "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "camelCase": true,
              "pascalCase": true
            },
            "ignore": [".*API\\.(ts|js)", "react-app-env\\.d\\.ts"]
          }
        ],
        "unicorn/no-null": "off",
        "unicorn/prefer-query-selector": "off"
    }
}

